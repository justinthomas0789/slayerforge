{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Weapons",
        "Armor",
        "Accessories",
        "Medical",
        "Support Devices",
        "Training Gear",
        "Upgrades"
      ]
    },
    "breathingStyle": {
      "type": "enumeration",
      "enum": [
        "Water Breathing",
        "Flame Breathing",
        "Thunder Breathing",
        "Stone Breathing",
        "Wind Breathing",
        "Mist Breathing",
        "Flower Breathing",
        "Insect Breathing",
        "Beast Breathing",
        "Sound Breathing",
        "Serpent Breathing",
        "Love Breathing",
        "Sun Breathing",
        "Adaptive",
        "All Styles"
      ]
    },
    "weaponType": {
      "type": "enumeration",
      "enum": [
        "Katana",
        "Dual Sword",
        "Whip Sword",
        "Throwing",
        "Support Gear",
        "Healing Kit",
        "Cloak",
        "AI Core",
        "Armor",
        "Device",
        "Core Module",
        "Drone"
      ]
    },
    "rarity": {
      "type": "enumeration",
      "enum": [
        "Common",
        "Uncommon",
        "Rare",
        "Epic",
        "Legendary",
        "Mythic"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "inStock": {
      "type": "boolean",
      "default": true
    },
    "stockCount": {
      "type": "integer",
      "default": 1
    },
    "sharpness": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "durability": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "speed": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "power": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "defense": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "weight": {
      "type": "decimal"
    },
    "material": {
      "type": "string"
    },
    "manufacturer": {
      "type": "string"
    },
    "aiFeature": {
      "type": "text"
    },
    "rarityColor": {
      "type": "string"
    }
  }
}
